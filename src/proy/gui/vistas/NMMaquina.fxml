<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="20.0" prefHeight="500.0" prefWidth="850.0" vgap="20.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proy.gui.controladores.NMMaquinaController">
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" />
      <ColumnConstraints hgrow="NEVER" />
      <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" />
      <ColumnConstraints hgrow="NEVER" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints maxHeight="1.7976931348623157E308" minHeight="150.0" vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <HBox alignment="CENTER_LEFT" GridPane.columnSpan="4">
         <children>
            <Label text="Nombre de la Maquina">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <TextField fx:id="nombreMaquina" maxWidth="1.7976931348623157E308" promptText="Ingrese un nombre..." HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" spacing="10.0" GridPane.rowIndex="1">
         <children>
            <Label minWidth="35.0" text="Filtros:">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <TextField fx:id="nombreParte" promptText="Nombre" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <Button minWidth="75.0" mnemonicParsing="false" onAction="#buscarPartes" prefWidth="75.0" text="Filtrar" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TableView fx:id="tablaPartes" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" GridPane.columnSpan="2" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="columnaNombreParte" maxWidth="10000.0" minWidth="74.0" prefWidth="-1.0" text="Parte" />
          <TableColumn fx:id="columnaCantidadParte" maxWidth="3000.0" minWidth="74.0" prefWidth="-1.0" text="Cantidad" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER_LEFT" spacing="20.0" GridPane.columnSpan="2" GridPane.rowIndex="3">
         <children>
            <Button minWidth="75.0" mnemonicParsing="false" onAction="#nuevaParte" prefWidth="75.0" text="(+) Nueva" />
            <Button minWidth="80.0" mnemonicParsing="false" onAction="#eliminarParte" prefWidth="80.0" text="(-) Eliminar" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" spacing="10.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
         <children>
            <Label minWidth="35.0" text="Filtros:">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <TextField fx:id="nombrePieza" promptText="Nombre" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextField>
            <ComboBox fx:id="materialPieza" prefWidth="150.0" promptText="Material" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin></ComboBox>
            <TextField fx:id="codigoPlanoPieza" promptText="Codigo plano" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin></TextField>
         </children>
      </HBox>
      <Button minWidth="75.0" mnemonicParsing="false" onAction="#buscarPiezas" prefWidth="75.0" text="Filtrar" GridPane.columnIndex="3" GridPane.rowIndex="1" />
      <TableView fx:id="tablaPiezas" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="columnaNombrePieza" maxWidth="10000.0" minWidth="74.0" prefWidth="-1.0" text="Pieza" />
            <TableColumn fx:id="columnaCantidadPieza" maxWidth="3000.0" minWidth="74.0" prefWidth="-1.0" text="Cantidad" />
            <TableColumn fx:id="columnaMaterialPieza" maxWidth="10000.0" minWidth="74.0" prefWidth="-1.0" text="Material" />
            <TableColumn fx:id="columnaCodigoPlanoPieza" maxWidth="10000.0" minWidth="74.0" prefWidth="-1.0" text="Cod. Plano" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER_LEFT" spacing="20.0" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="3">
         <children>
            <Button minWidth="75.0" mnemonicParsing="false" onAction="#nuevaPieza" prefWidth="75.0" text="(+) Nueva" />
            <Button minWidth="80.0" mnemonicParsing="false" onAction="#eliminarPieza" prefWidth="80.0" text="(-) Eliminar" />
         </children>
      </HBox>
      <HBox alignment="BOTTOM_RIGHT" prefWidth="330.0" spacing="20.0" GridPane.columnSpan="4" GridPane.rowIndex="4">
         <children>
            <Button minWidth="75.0" mnemonicParsing="false" onAction="#guardar" prefWidth="75.0" text="Guardar" />
            <Button minWidth="75.0" mnemonicParsing="false" onAction="#salir" prefWidth="75.0" text="Salir" />
         </children>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</GridPane>
