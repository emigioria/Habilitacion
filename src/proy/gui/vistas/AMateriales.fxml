<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="422.0" prefWidth="473.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proy.gui.controladores.AMaterialesController">
   <children>
      <Label text="Lista de Materiales">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="6.0" prefWidth="473.0">
         <children>
            <Label text="Nombre:">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" top="5.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="nombreMaterial">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox nodeOrientation="LEFT_TO_RIGHT" prefHeight="263.0" prefWidth="239.0" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="tablaMateriales" prefHeight="217.0" prefWidth="177.0" HBox.hgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="columnaMaterial" minWidth="0.0" prefWidth="0.0" text="Material" />
                  <TableColumn fx:id="columnaMedidas" prefWidth="75.0" text="Medidas" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <VBox prefHeight="358.0" prefWidth="86.0">
               <children>
                  <Button fx:id="botonNuevo" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#nuevoMaterial" text="Nueva">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="botonEliminar" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#eliminarMaterial" text="Eliminar">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
